<?import com.comp2042.view.GameOverPanel?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.Group?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.media.MediaView?>
<?import javafx.scene.media.Media?>
<?import javafx.scene.media.MediaPlayer?>

<AnchorPane fx:controller="com.comp2042.controller.GuiController"
            xmlns:fx="http://javafx.com/fxml">

    <MediaView fx:id="backgroundVideo"
               preserveRatio="false"
               fitWidth="800" fitHeight="600"
               AnchorPane.topAnchor="0"
               AnchorPane.bottomAnchor="0"
               AnchorPane.leftAnchor="0"
               AnchorPane.rightAnchor="0"/>

    <!-- Active falling block -->
    <GridPane fx:id="brickPanel" vgap="1" hgap="1" layoutX="130"/>
    <GridPane fx:id="ghostBrickPanel" vgap="1" hgap="1" layoutX="130"/>

    <!-- Main game board -->
    <BorderPane styleClass="gameBoard" fx:id="gameBoard" layoutX="130">
        <center>
<!--            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>-->
            <GridPane fx:id="gamePanel" hgap="1" vgap="1" layoutY="30" layoutX="40"/>
        </center>
    </BorderPane>

    <VBox layoutX="5" layoutY="40" spacing="10"
          style="-fx-background-color: rgba(0,0,0,0.30);
             -fx-padding: 12px;
             -fx-border-color: white;
             -fx-border-width: 3;
             -fx-border-radius: 8;
             -fx-background-radius: 8;">

        <Label text="HOLD"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
               alignment="CENTER" />

        <GridPane fx:id="holdPanel" hgap="2" vgap="2" alignment="CENTER"/>

        <Label fx:id="scoreLabel"
               text="Score: 0"
               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

        <Label fx:id="linesLabel"
               text="Lines: 0"
               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;" />

        <Label fx:id="levelLabel"
               text="Level: 1"
               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold;"/>

    </VBox>

    <VBox layoutX="370" layoutY="40" spacing="10"
          alignment="TOP_CENTER"
          style="-fx-background-color: rgba(0,0,0,0.30);
             -fx-padding: 12px;
             -fx-border-color: white;
             -fx-border-width: 3;
             -fx-border-radius: 8;
             -fx-background-radius: 8;">

        <Label text="NEXT"
               style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"
               alignment="CENTER" />

        <GridPane fx:id="nextPanel1" hgap="2" vgap="2" alignment="CENTER"/>

        <GridPane fx:id="nextPanel2" hgap="2" vgap="2" alignment="CENTER"/>

        <GridPane fx:id="nextPanel3" hgap="2" vgap="2" alignment="CENTER"/>

    </VBox>

    <AnchorPane fx:id="pauseOverlay"
                visible="false"
                style="-fx-background-color: rgba(0,0,0,0.6);"
                AnchorPane.topAnchor="0"
                AnchorPane.bottomAnchor="0"
                AnchorPane.leftAnchor="0"
                AnchorPane.rightAnchor="0">

        <VBox fx:id="pauseBox"
              spacing="20"
              alignment="CENTER"
              prefWidth="320"
              prefHeight="320"
              AnchorPane.topAnchor="100"
              AnchorPane.leftAnchor="85"
              style="-fx-background-color: #222;
                 -fx-padding: 30;
                 -fx-background-radius: 15;">
            <Label text="PAUSED"
                   style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" />
            <Button fx:id="btnResume" text="Resume"  prefWidth="160"/>
            <Button fx:id="btnNewGame" text="New Game" prefWidth="160"/>
            <Button fx:id="btnQuit"   text="Quit" prefWidth="160"/>
        </VBox>

    </AnchorPane>

    <Group fx:id="groupNotification" layoutX="143" layoutY="203">
        <VBox alignment="CENTER">
            <GameOverPanel fx:id="gameOverPanel"/>
        </VBox>
    </Group>

    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</AnchorPane>
